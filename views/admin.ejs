<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href="/css/globals.css" />
  <link rel="stylesheet" href="/css/styleguide.css" />
  <link rel="stylesheet" href="/css/style.css">
  
  <style>
    /* custom admin styles - added these because bootstrap wasn't working right */
    .sidebar-custom {
      width: 250px;
      min-height: 100vh;
      background-color: #f8f9fa;
      padding: 20px;
    }
    
    /* idk why but the active link wasnt showing right */
    .nav-link.active {
      background-color: #e9ecef;
      border-radius: 4px;
    }
    
    .logout-link {
      color: #dc3545 !important;
    }
  </style>
</head>
<body>


<div style="display: flex;">

  <!-- Sidebar - TODO: maybe make this collapsible later? -->
  <div class="sidebar-custom">
    <h5 style="font-weight: bold;">Admin Panel</h5>
    <ul class="nav flex-column" style="margin-top: 30px;">
      <li class="nav-item"><a class="nav-link active" href="#users-section">Users</a></li>
      <li class="nav-item"><a class="nav-link" href="#blogs-section">Blogs</a></li>
      <li class="nav-item"><a class="nav-link" href="#forum-section">Forum</a></li>
      <li class="nav-item"><a class="nav-link logout-link" href="/logout">Logout</a></li>
    </ul>
  </div>

  <!-- Main Content Area -->
  <div style="flex-grow: 1; padding: 30px;">

    <!-- Users Section -->
    <section id="users-section" style="margin-bottom: 50px;">
      <h4>Users Management</h4>
      <table class="table table-bordered" style="margin-top: 20px;">
        <thead style="background-color: #f8f9fa;">
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (users && users.length > 0) { %>
            <% users.forEach(function(user) { %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.isLocked ? 'Locked' : 'Active' %></td>
                <td>
                  <% if (user.isLocked) { %>
                    <button class="btn btn-success btn-sm" onclick="toggleUserLock('<%= user._id %>', false)">Unlock</button>
                  <% } else { %>
                    <button class="btn btn-warning btn-sm" onclick="toggleUserLock('<%= user._id %>', true)">Lock</button>
                  <% } %>
                  <a href="/admin/users/<%= user._id %>/edit" class="btn btn-secondary btn-sm">Edit</a>
                  <button class="btn btn-danger btn-sm" onclick="deleteUser('<%= user._id %>')">Delete</button>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="4" style="text-align: center; color: #6c757d;">No users found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>

    <!-- Blogs Section -->
    <section id="blogs-section" style="margin-bottom: 50px;">
      <h4>Blogs Management</h4>
      <a href="/admin/blogs/new" class="btn btn-primary" style="margin-bottom: 15px; margin-top: 10px;">Add Blog</a>
      <table class="table table-bordered">
        <thead style="background-color: #f8f9fa;">
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (blogs && blogs.length > 0) { %>
            <% blogs.forEach(function(blog) { %>
              <tr>
                <td><%= blog.title %></td>
                <td><%= blog.author %></td>
                <td><%= blog.category %></td>
                <td><%= new Date(blog.createdAt).toLocaleDateString() %></td>
                <td>
                  <a href="/admin/blogs/<%= blog._id %>/edit" class="btn btn-secondary btn-sm">Edit</a>
                  <button class="btn btn-danger btn-sm" onclick="deleteBlog('<%= blog._id %>')">Delete</button>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="5" style="text-align: center; color: #6c757d;">No blogs found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>

    <!-- Forum Section -->
    <section id="forum-section">
      <h4>Forum Management</h4>
      <table class="table table-bordered" style="margin-top: 20px;">
        <thead style="background-color: #f8f9fa;">
          <tr>
            <th>Thread Title</th>
            <th>Author</th>
            <th>Date</th>
            <th>Comments</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (threads && threads.length > 0) { %>
            <% threads.forEach(function(thread) { %>
              <tr>
                <td><%= thread.title %></td>
                <td><%= thread.author?.username || 'Unknown' %></td>
                <td><%= new Date(thread.createdAt).toLocaleDateString() %></td>
                <td><%= thread.comments ? thread.comments.length : 0 %></td>
                <td>
                  <a href="/forum/threads/<%= thread._id %>" class="btn btn-info btn-sm" target="_blank">View</a>
                  <button class="btn btn-warning btn-sm" onclick="archiveThread('<%= thread._id %>')">
                    <%= thread.isArchived ? 'Unarchive' : 'Archive Thread' %>
                  </button>
                  <button class="btn btn-danger btn-sm" onclick="deleteThread('<%= thread._id %>')">Delete Post</button>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="5" style="text-align: center; color: #6c757d;">No forum threads found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>

  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
// Admin panel javascript

// Toggle user lock/unlock - this function handles both locking and unlocking
function toggleUserLock(userId, shouldLock) {
  var action = shouldLock ? 'lock' : 'unlock';
  
  // ask for confirmation first
  if (confirm('Are you sure you want to ' + action + ' this user?')) {
    console.log('Toggling user lock:', userId, action); // for debugging
    
    // make the API call
    fetch('/admin/users/' + userId + '/' + action, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(function(response) {
      if (response.ok) {
        // success! reload the page to show changes
        window.location.reload();
      } else {
        alert('Failed to ' + action + ' user. Please try again.');
      }
    })
    .catch(function(error) {
      console.error('Error:', error);
      alert('An error occurred. Please try again.');
    });
  }
}

// Delete user function
function deleteUser(userId) {
  // double check they want to delete
  if (confirm('Are you sure you want to delete this user? This action cannot be undone.')) {
    console.log('Deleting user:', userId);
    
    fetch('/admin/users/' + userId, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(function(response) {
      if (response.ok) {
        window.location.reload();
      } else {
        alert('Failed to delete user. Please try again.');
      }
    })
    .catch(function(error) {
      console.error('Error:', error);
      alert('An error occurred. Please try again.');
    });
  }
}

// Delete blog - similar to delete user
function deleteBlog(blogId) {
  if (confirm('Are you sure you want to delete this blog? This action cannot be undone.')) {
    console.log('Deleting blog:', blogId);
    
    fetch('/admin/blogs/' + blogId, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(function(response) {
      if (response.ok) {
        window.location.reload();
      } else {
        alert('Failed to delete blog. Please try again.');
      }
    })
    .catch(function(error) {
      console.error('Error:', error);
      alert('An error occurred. Please try again.');
    });
  }
}

// Archive or unarchive thread
function archiveThread(threadId) {
  if (confirm('Are you sure you want to archive/unarchive this thread?')) {
    console.log('Archiving thread:', threadId);
    
    fetch('/admin/threads/' + threadId + '/archive', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(function(response) {
      if (response.ok) {
        window.location.reload();
      } else {
        alert('Failed to archive thread. Please try again.');
      }
    })
    .catch(function(error) {
      console.error('Error:', error);
      alert('An error occurred. Please try again.');
    });
  }
}

// Delete forum thread
function deleteThread(threadId) {
  if (confirm('Are you sure you want to delete this thread? This action cannot be undone.')) {
    console.log('Deleting thread:', threadId);
    
    fetch('/admin/threads/' + threadId, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(function(response) {
      if (response.ok) {
        window.location.reload();
      } else {
        alert('Failed to delete thread. Please try again.');
      }
    })
    .catch(function(error) {
      console.error('Error:', error);
      alert('An error occurred. Please try again.');
    });
  }
}

// Smooth scroll to sections when clicking sidebar links
// copied from stackoverflow lol
document.addEventListener('DOMContentLoaded', function() {
  var links = document.querySelectorAll('.nav-link[href^="#"]');
  
  for (var i = 0; i < links.length; i++) {
    links[i].addEventListener('click', function(e) {
      e.preventDefault();
      
      var targetId = this.getAttribute('href').substring(1);
      var targetSection = document.getElementById(targetId);
      
      if (targetSection) {
        // scroll to the section
        targetSection.scrollIntoView({ behavior: 'smooth' });
        
        // update active state on sidebar
        var allLinks = document.querySelectorAll('.nav-link');
        for (var j = 0; j < allLinks.length; j++) {
          allLinks[j].classList.remove('active');
        }
        this.classList.add('active');
      }
    });
  }
  
  console.log('Admin panel loaded successfully');
});
</script>

</body>
</html>
