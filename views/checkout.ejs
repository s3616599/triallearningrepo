<div class="container py-5">
  <div class="row g-5">
    
    <div class="col-lg-7">
      
      <form action="/place-order" method="POST">
        
        <h5 class="fw-bold mb-3">Shipping Address</h5>
        
        <div class="mb-3">
          <label class="form-label small text-muted">Email Address</label>
          <input type="email" name="email" class="form-control" placeholder="user@email.com" required>
        </div>

        <div class="mb-3">
          <label class="form-label small text-muted">Full Name</label>
          <input type="text" name="fullname" class="form-control" placeholder="John Doe" required>
        </div>

        <div class="mb-3">
          <label class="form-label small text-muted">Street Address</label>
          <input type="text" name="address" class="form-control" placeholder="123 Main St" required>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="form-label small text-muted">City</label>
            <input type="text" name="city" class="form-control" required>
          </div>
          <div class="col-md-3 mb-3">
            <label class="form-label small text-muted">State</label>
            <input type="text" name="state" class="form-control" required>
          </div>
          <div class="col-md-3 mb-3">
            <label class="form-label small text-muted">Zip Code</label>
            <input type="text" name="zip" class="form-control" required>
          </div>
        </div>

        <hr class="my-5">

        <h5 class="fw-bold mb-3">Payment</h5>
        <p class="text-muted small mb-3">All transactions are secure and encrypted.</p>

        <div class="border p-3 rounded bg-light mb-3">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard" checked>
            <label class="form-check-label fw-bold" for="creditCard">
              Credit Card
            </label>
          </div>
          
          <div class="mt-3">
            <div class="mb-3">
              <input type="text" name="cardnumber" class="form-control" placeholder="Card number">
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <input type="text" name="cardname" class="form-control" placeholder="Name on card">
              </div>
              <div class="col-md-3 mb-3">
                <input type="text" name="expiry" class="form-control" placeholder="MM / YY">
              </div>
              <div class="col-md-3 mb-3">
                <input type="text" name="cvc" class="form-control" placeholder="CVC">
              </div>
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-dark w-100 py-3 fw-bold mt-3">Place Order</button>
      </form>
    </div>

    <div class="col-lg-5">
      <div class="border rounded p-4 shadow-sm bg-white sticky-top" style="top: 20px;">
        <h5 class="fw-bold mb-4">Your Order</h5>

        <% cartItems.forEach(item => { %>
            <div class="d-flex align-items-center gap-3 mb-4">
                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                    <img src="<%= item.product.image %>" alt="<%= item.product.name %>" style="width: 50px; height: 50px; object-fit: contain;">
                </div>
                
                <div class="flex-grow-1">
                    <h6 class="fw-bold mb-0"><%= item.product.name %></h6>
                    <small class="text-muted">Qty: <%= item.quantity %></small>
                </div>
                
                <div class="fw-bold">$<%= item.product.price %></div>
            </div>
        <% }) %>
        
        <a href="/cart" class="btn btn-outline-dark btn-sm w-100 mb-4">Edit Cart</a>

        <div class="d-flex justify-content-between mb-2 small">
          <span class="text-secondary">Subtotal</span>
          <span class="fw-bold">$<%= subtotal %></span>
        </div>
        <div class="d-flex justify-content-between mb-2 small">
          <span class="text-secondary">Shipping</span>
          <span class="text-secondary">Free</span>
        </div>
        <div class="d-flex justify-content-between mb-3 small">
          <span class="text-secondary">Tax (10%)</span>
          <span class="text-secondary">$<%= tax %></span>
        </div>

        <hr>

        <div class="d-flex justify-content-between mb-4">
          <span class="fw-bold">Total</span>
          <span class="fw-bold fs-5">$<%= total %></span>
        </div>
        
        <p class="small text-center text-muted">Complete the form to place order</p>

      </div>
    </div>

  </div>
</div>

