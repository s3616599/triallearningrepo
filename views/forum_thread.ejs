<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/css/globals.css" />
    <link rel="stylesheet" href="/css/styleguide.css" />
    <link rel="stylesheet" href="/css/style.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  </head>

  <body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg bg-light border-bottom py-3">
    <div class="container">
        <a class="navbar-brand fw-bold" href="#">Ecommerce</a>

        <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navMenu" class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto ms-4 gap-3">
                <li class="nav-item"><a class="nav-link" href="/shop">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
                <li class="nav-item"><a class="nav-link" href="/blogs">Blogs</a></li>
                <li class="nav-item"><a class="nav-link active" href="/forum">Forum</a></li>
                <li class="nav-item"><a class="nav-link" href="/sitemap">Site Map</a></li>
            </ul>

            <form class="d-flex me-3">
                <input class="form-control" type="search" placeholder="Search products">
            </form>

            <a href="/cart" class="me-3 text-dark">
              <i class="fa-solid fa-bag-shopping fs-5"></i>
            </a>

            <div class="dropdown">
              <a href="#" class="text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-regular fa-user fs-5"></i>
              </a>
              <ul class="dropdown-menu dropdown-menu-end">
                <% if (!user) { %>
                  <li><a class="dropdown-item" href="/login">Login</a></li>
                  <li><a class="dropdown-item" href="/register">Register</a></li>
                <% } else { %>
                  <li><a class="dropdown-item" href="/account">My Account</a></li>
                  <% if (user.role === 'admin') { %>
                  <li><a class="dropdown-item" href="/admin">Admin Dashboard</a></li>
                  <% } %>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
                <% } %>
              </ul>
            </div>
        </div>
    </div>
</nav>

<!-- BREADCRUMB -->
<nav class="bg-light py-2 border-bottom">
    <div class="container">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/shop">Ecommerce</a></li>
            <li class="breadcrumb-item"><a href="/forum">Forum</a></li>
            <li class="breadcrumb-item active">Thread</li>
        </ol>
    </div>
</nav>

<!-- THREAD CONTENT -->
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Thread Header -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h4 class="card-title fw-bold mb-2">
                                <%= thread.title %>
                                <% if (thread.archived) { %>
                                <span class="badge bg-secondary ms-2">Archived</span>
                                <% } %>
                            </h4>
                            <p class="text-muted small mb-0">
                                <i class="fa-regular fa-user me-1"></i> <%= thread.author %> 
                                <span class="mx-2">•</span>
                                <i class="fa-regular fa-clock me-1"></i> <%= new Date(thread.created).toLocaleDateString() %>
                            </p>
                        </div>
                        <% if (user && thread.userId === user.id && !thread.archived) { %>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-ellipsis-v"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#editThreadModal">Edit</a></li>
                                <li><a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#deleteThreadModal">Delete</a></li>
                            </ul>
                        </div>
                        <% } %>
                    </div>
                    
                    <!-- Tags -->
                    <% if (thread.tags && thread.tags.length > 0) { %>
                    <div class="mb-3">
                        <% thread.tags.forEach(function(tag) { %>
                        <span class="badge bg-light text-dark border me-1"><%= tag %></span>
                        <% }); %>
                    </div>
                    <% } %>
                    
                    <!-- Thread Body -->
                    <div class="thread-body">
                        <p><%= thread.body %></p>
                    </div>
                    
                    <% if (thread.image && thread.image !== 'img/placeholder.png') { %>
                    <img src="/<%= thread.image %>" alt="Thread image" class="img-fluid rounded mt-3" style="max-height: 400px;">
                    <% } %>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fa-regular fa-comments me-2"></i>
                        Comments (<%= thread.comments ? thread.comments.length : 0 %>)
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Add Comment Form -->
                    <% if (!thread.archived) { %>
                    <form id="commentForm" class="mb-4">
                        <div class="mb-3">
                            <textarea class="form-control" id="commentText" rows="3" placeholder="Write a comment..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-dark">
                            <i class="fa-regular fa-paper-plane me-1"></i> Post Comment
                        </button>
                    </form>
                    <% } else { %>
                    <div class="alert alert-warning mb-4">
                        <i class="fa-solid fa-lock me-2"></i> This thread is archived. Comments are disabled.
                    </div>
                    <% } %>

                    <!-- Comments List -->
                    <div id="commentsList">
                        <% if (thread.comments && thread.comments.length > 0) { %>
                            <% thread.comments.forEach(function(comment) { %>
                            <% if (!comment.archived || (user && user.role === 'admin')) { %>
                            <div class="comment-item border-bottom pb-3 mb-3" id="comment-<%= comment.id %>">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong><%= comment.author %></strong>
                                        <% if (comment.archived) { %>
                                        <span class="badge bg-secondary ms-2">Archived</span>
                                        <% } %>
                                        <span class="text-muted small ms-2"><%= new Date(comment.created).toLocaleDateString() %></span>
                                    </div>
                                    <% if (user && comment.userId === user.id && !thread.archived && !comment.archived) { %>
                                    <button class="btn btn-sm btn-outline-danger delete-comment" data-comment-id="<%= comment.id %>">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                    <% } %>
                                </div>
                                <p class="mb-0 mt-2"><%= comment.text %></p>
                            </div>
                            <% } %>
                            <% }); %>
                        <% } else { %>
                            <p class="text-muted text-center" id="noComments">No comments yet. Be the first to comment!</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header fw-bold">Thread Info</div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Author</span>
                        <span class="fw-bold"><%= thread.author %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Created</span>
                        <span><%= new Date(thread.created).toLocaleDateString() %></span>
                    </li>
                </ul>
            </div>

            <a href="/forum" class="btn btn-outline-dark w-100">
                <i class="fa-solid fa-arrow-left me-2"></i> Back to Forum
            </a>
        </div>
    </div>
</div>

<!-- Edit Thread Modal -->
<% if (user && thread.userId === user.id) { %>
<div class="modal fade" id="editThreadModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Thread</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editThreadForm">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" id="editTitle" value="<%= thread.title %>" required minlength="10">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" id="editBody" rows="5" required minlength="20"><%= thread.body %></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tags (comma separated)</label>
                        <input type="text" class="form-control" id="editTags" value="<%= thread.tags ? thread.tags.join(', ') : '' %>">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-dark" id="saveEditThread">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Thread Modal -->
<div class="modal fade" id="deleteThreadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">Delete Thread</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this thread?</p>
                <p class="fw-bold">"<%= thread.title %>"</p>
                <p class="text-muted small">This action cannot be undone. All comments will also be deleted.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteThread">Delete Thread</button>
            </div>
        </div>
    </div>
</div>
<% } %>

<!-- FOOTER -->
<footer class="bg-light pt-5 border-top">
  <div class="container">
    <div class="row">
      <div class="col-md-3 mb-4">
        <h5 class="fw-bold">Support</h5>
        <ul class="list-unstyled small text-muted">
          <li class="mb-2">FAQ</li>
          <li class="mb-2">Terms of use</li>
          <li class="mb-2">Privacy Policy</li>
        </ul>
      </div>
      <div class="col-md-3 mb-4">
        <h5 class="fw-bold">Company</h5>
        <ul class="list-unstyled small text-muted">
          <li class="mb-2">About Us</li>
          <li class="mb-2">Contact</li>
          <li class="mb-2">Careers</li>
        </ul>
      </div>
      <div class="col-md-3 mb-4">
        <h5 class="fw-bold">Shop</h5>
        <ul class="list-unstyled small text-muted">
          <li class="mb-2">My Account</li>
          <li class="mb-2">Checkout</li>
          <li class="mb-2">Cart</li>
        </ul>
      </div>
      <div class="col-md-3 mb-4">
        <h5 class="fw-bold">Stay Updated</h5>
        <form class="d-flex">
          <input type="email" class="form-control form-control-sm" placeholder="Enter Email">
          <button class="btn btn-dark btn-sm ms-2">Subscribe</button>
        </form>
      </div>
    </div>
    <hr class="mt-4">
    <div class="text-center pb-3 small text-muted">
      © 2023 DevCut. All rights reserved.
    </div>
  </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const threadId = <%= thread.id %>;

    // Add Comment
    document.getElementById('commentForm')?.addEventListener('submit', async function(e) {
        e.preventDefault();
        const text = document.getElementById('commentText').value.trim();
        
        if (!text) {
            alert('Comment cannot be empty');
            return;
        }

        try {
            const response = await fetch(`/forum/threads/${threadId}/comments`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ text })
            });

            const data = await response.json();

            if (response.ok) {
                // Reload to show new comment
                window.location.reload();
            } else {
                alert(data.error || 'Error adding comment');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error adding comment');
        }
    });

    // Delete Comment
    document.querySelectorAll('.delete-comment').forEach(btn => {
        btn.addEventListener('click', async function() {
            if (!confirm('Are you sure you want to delete this comment?')) return;

            const commentId = this.getAttribute('data-comment-id');

            try {
                const response = await fetch(`/forum/threads/${threadId}/comments/${commentId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await response.json();

                if (response.ok) {
                    document.getElementById(`comment-${commentId}`).remove();
                    // Check if no comments left
                    const remaining = document.querySelectorAll('.comment-item');
                    if (remaining.length === 0) {
                        document.getElementById('commentsList').innerHTML = 
                            '<p class="text-muted text-center">No comments yet. Be the first to comment!</p>';
                    }
                } else {
                    alert(data.error || 'Error deleting comment');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error deleting comment');
            }
        });
    });

    // Edit Thread
    document.getElementById('saveEditThread')?.addEventListener('click', async function() {
        const title = document.getElementById('editTitle').value;
        const body = document.getElementById('editBody').value;
        const tags = document.getElementById('editTags').value;

        if (title.length < 10) {
            alert('Title must be at least 10 characters');
            return;
        }
        if (body.length < 20) {
            alert('Message must be at least 20 characters');
            return;
        }

        try {
            const response = await fetch(`/forum/threads/${threadId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ title, body, tags })
            });

            const data = await response.json();

            if (response.ok) {
                window.location.reload();
            } else {
                alert(data.error || 'Error updating thread');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error updating thread');
        }
    });

    // Delete Thread
    document.getElementById('confirmDeleteThread')?.addEventListener('click', async function() {
        try {
            const response = await fetch(`/forum/threads/${threadId}/delete`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });

            const data = await response.json();

            if (response.ok) {
                window.location.href = '/forum';
            } else {
                alert(data.error || 'Error deleting thread');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error deleting thread');
        }
    });
</script>
</body>
</html>
