<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Thread Search and Sort Functionality
  const searchInput = document.getElementById('threadSearch');
  const clearSearchBtn = document.getElementById('clearSearch');
  const searchResultsDiv = document.getElementById('searchResults');
  const noSearchResultsDiv = document.getElementById('noSearchResults');
  const sortSelect = document.getElementById('threadSort');
  const threadCards = Array.from(document.querySelectorAll('.thread-card'));
  const threadContainer = threadCards.length > 0 ? threadCards[0].parentElement : null;

  // Sort threads
  function sortThreads(sortBy) {
    if (!threadContainer || threadCards.length === 0) return;

    const sortedCards = [...threadCards].sort((a, b) => {
      switch (sortBy) {
        case 'newest':
          return parseInt(b.getAttribute('data-date')) - parseInt(a.getAttribute('data-date'));
        case 'oldest':
          return parseInt(a.getAttribute('data-date')) - parseInt(b.getAttribute('data-date'));
        case 'title-asc':
          return a.getAttribute('data-title').localeCompare(b.getAttribute('data-title'));
        case 'title-desc':
          return b.getAttribute('data-title').localeCompare(a.getAttribute('data-title'));
        default:
          return 0;
      }
    });

    // Re-append in sorted order
    sortedCards.forEach(card => threadContainer.appendChild(card));
  }

  // Filter threads based on search
  function filterThreads() {
    const searchTerm = searchInput.value.toLowerCase().trim();
    
    // Show/hide clear button
    clearSearchBtn.style.display = searchTerm ? 'block' : 'none';
    
    if (!searchTerm) {
      // Reset: show all threads
      threadCards.forEach(card => {
        card.style.display = 'block';
      });
      searchResultsDiv.style.display = 'none';
      noSearchResultsDiv.style.display = 'none';
      return;
    }

    let matchCount = 0;
    const searchTerms = searchTerm.split(/\s+/);

    threadCards.forEach(card => {
      const title = card.getAttribute('data-title') || '';
      const author = card.getAttribute('data-author') || '';
      const excerpt = card.getAttribute('data-excerpt') || '';
      const tags = card.getAttribute('data-tags') || '';
      
      const searchableText = `${title} ${author} ${excerpt} ${tags}`;
      
      // Check if all search terms match
      const matches = searchTerms.every(term => searchableText.includes(term));
      
      if (matches) {
        card.style.display = 'block';
        matchCount++;
      } else {
        card.style.display = 'none';
      }
    });

    // Show search results count
    searchResultsDiv.style.display = 'block';
    searchResultsDiv.textContent = `Found ${matchCount} thread${matchCount !== 1 ? 's' : ''} matching "${searchInput.value}"`;
    
    // Show no results message if needed
    noSearchResultsDiv.style.display = matchCount === 0 ? 'block' : 'none';
  }

  // Event listeners
  searchInput.addEventListener('input', filterThreads);
  
  sortSelect.addEventListener('change', function() {
    sortThreads(this.value);
  });

  // Clear search
  clearSearchBtn.addEventListener('click', function() {
    searchInput.value = '';
    filterThreads();
    searchInput.focus();
  });

  // Initial sort (newest first)
  sortThreads('newest');

  // Handle new thread creation
  document.getElementById('submitThread').addEventListener('click', async function() {
    const title = document.getElementById('threadTitle').value;
    const body = document.getElementById('threadBody').value;
    const tags = document.getElementById('threadTags').value;
    const image = document.getElementById('threadImage').value;

    // Validation
    if (title.length < 10) {
      alert('Title must be at least 10 characters');
      return;
    }
    if (body.length < 20) {
      alert('Message must be at least 20 characters');
      return;
    }

    try {
      const response = await fetch('/forum/threads', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ title, body, tags, image })
      });

      const data = await response.json();

      if (response.ok) {
        // Close modal and reload page
        const modal = bootstrap.Modal.getInstance(document.getElementById('newThreadModal'));
        modal.hide();
        window.location.reload();
      } else {
        alert(data.error || 'Error creating thread');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error creating thread');
    }
  });
</script>
</body>
