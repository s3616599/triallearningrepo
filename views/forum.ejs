var sortBy = 'newest';

// Validate the title field
function validateTitle() {
  var titleField = document.getElementById('threadTitle');
  var titleText = titleField.value;
  var titleLen = titleText.length;
  var errorBox = document.getElementById('titleError');
  
  // clear any previous errors
  titleField.classList.remove('error-input');
  errorBox.classList.remove('show-error');
  errorBox.textContent = '';
  
  // check if title is too short
  if (titleLen > 0 && titleLen < 10) {
    titleField.classList.add('error-input');
    errorBox.textContent = 'Title must be at least 10 characters';
    errorBox.classList.add('show-error');
    return false;
  }
  
  // check if it's just spaces
  if (titleLen > 0 && titleText.trim().length === 0) {
    titleField.classList.add('error-input');
    errorBox.textContent = 'Title cannot be empty or only spaces';
    errorBox.classList.add('show-error');
    return false;
  }
  
  return true;
}

// Validate the message field
function validateMessage() {
  var messageField = document.getElementById('threadBody');
  var messageText = messageField.value;
  var messageLen = messageText.length;
  var errorBox = document.getElementById('bodyError');
  
  // remove old errors first
  messageField.classList.remove('error-input');
  errorBox.classList.remove('show-error');
  errorBox.textContent = '';
  
  // needs to be at least 20 characters
  if (messageLen > 0 && messageLen < 20) {
    messageField.classList.add('error-input');
    errorBox.textContent = 'Message must be at least 20 characters';
    errorBox.classList.add('show-error');
    return false;
  }
  
  // can't be all spaces
  if(messageLen > 0 && messageText.trim().length === 0){
    messageField.classList.add('error-input');
    errorBox.textContent = 'Message cannot be empty or only spaces';
    errorBox.classList.add('show-error');
    return false;
  }
  
  return true;
}

// Validate tags - this one's optional so it's more lenient
function validateTags() {
  var tagsField = document.getElementById('threadTags');
  var tagsText = tagsField.value;
  var tagsLen = tagsText.length;
  var errorBox = document.getElementById('tagsError');
  
  tagsField.classList.remove('error-input');
  errorBox.classList.remove('show-error');
  errorBox.textContent = '';
  
  // only validate if user actually typed something
  if (tagsLen > 0) {
    // split by commas and count tags
    var tagList = tagsText.split(',');
    var cleanedTags = [];
    
    for (var i = 0; i < tagList.length; i++) {
      var singleTag = tagList[i].trim();
      if (singleTag.length > 0) {
        cleanedTags.push(singleTag);
      }
    }
    
    // max 10 tags allowed
    if (cleanedTags.length > 10) {
      tagsField.classList.add('error-input');
      errorBox.textContent = 'Maximum 10 tags allowed';
      errorBox.classList.add('show-error');
      return false;
    }
  }
  
  return true;
}

// Check if uploaded image is valid
function validateImage() {
  var imageField = document.getElementById('threadImage');
  var errorBox = document.getElementById('imageError');
  
  imageField.classList.remove('error-input');
  errorBox.classList.remove('show-error');
  errorBox.textContent = '';
  
  // only check if user picked a file
  if (imageField.files.length > 0) {
    var selectedFile = imageField.files[0];
    var maxFileSize = 5 * 1024 * 1024; // 5MB in bytes
    
    // file too big?
    if (selectedFile.size > maxFileSize) {
      imageField.classList.add('error-input');
      errorBox.textContent = 'Image size must be less than 5MB';
      errorBox.classList.add('show-error');
      currentImage = null;
      document.getElementById('imagePreview').style.display = 'none';
      return false;
    }
    
    // check if it's an image file
    var okTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'];
    var fileIsOk = false;
    for (var i = 0; i < okTypes.length; i++) {
      if (selectedFile.type === okTypes[i]) {
        fileIsOk = true;
        break;
      }
    }
    
    if (!fileIsOk) {
      imageField.classList.add('error-input');
      errorBox.textContent = 'Only JPEG, PNG, GIF, and WebP images are allowed';
      errorBox.classList.add('show-error');
      currentImage = null;
      document.getElementById('imagePreview').style.display = 'none';
      return false;
    }
    
    // if everything's good, show preview
    var fileReader = new FileReader();
    fileReader.onload = function(event) {
      currentImage = event.target.result;
      document.getElementById('previewImg').src = currentImage;
      document.getElementById('imagePreview').style.display = 'block';
    };
    fileReader.readAsDataURL(selectedFile);
  }
  
  return true;
}

// Update the character counter for title
function updateTitleCount() {
  var titleField = document.getElementById('threadTitle');
  var counterDisplay = document.getElementById('titleCounter');
  var currentLength = titleField.value.length;
  
  counterDisplay.textContent = currentLength + ' / 120 characters';
  
  // change color when getting close to limit
  counterDisplay.classList.remove('almost-full', 'too-much');
  if (currentLength >= 108) {
    counterDisplay.classList.add('too-much');
  } else if (currentLength >= 90) {
    counterDisplay.classList.add('almost-full');
  }
}

// Update character counter for message
function updateMessageCount() {
  var messageField = document.getElementById('threadBody');
  var counterDisplay = document.getElementById('bodyCounter');
  var currentLength = messageField.value.length;
  
  counterDisplay.textContent = currentLength + ' / 2000 characters';
  
  counterDisplay.classList.remove('almost-full', 'too-much');
  if (currentLength >= 1800) {
    counterDisplay.classList.add('too-much');
  } else if (currentLength >= 1500) {
    counterDisplay.classList.add('almost-full');
  }
}

// Update character counter for tags
function updateTagsCount() {
  var tagsField = document.getElementById('threadTags');
  var counterDisplay = document.getElementById('tagsCounter');
  var currentLength = tagsField.value.length;
  
  counterDisplay.textContent = currentLength + ' / 200 characters';
  
  counterDisplay.classList.remove('almost-full', 'too-much');
  if (currentLength >= 180) {
    counterDisplay.classList.add('too-much');
  } else if(currentLength >= 150){
    counterDisplay.classList.add('almost-full');
  }
}

// Check if we should enable or disable the post button
function checkPostButton() {
  var titleField = document.getElementById('threadTitle');
  var messageField = document.getElementById('threadBody');
  var postButton = document.getElementById('postBtn');
  
  var titleValue = titleField.value.trim();
  var messageValue = messageField.value.trim();
  
  // both fields need to meet minimum length
  var titleIsGood = titleValue.length >= 10 && titleValue.length <= 120;
  var messageIsGood = messageValue.length >= 20 && messageValue.length <= 2000;
  
  // check if there are any error messages showing
  var errorsExist = document.querySelectorAll('.error-input').length > 0;
  
  // only enable button if everything looks good
  if (titleIsGood && messageIsGood && !errorsExist) {
    postButton.disabled = false;
  } else {
    postButton.disabled = true;
  }
}

// Show all the threads on the page
function showAllThreads() {
  var gridContainer = document.getElementById('threadsGrid');
  gridContainer.innerHTML = '';
  
  // filter threads based on search
  var threadsToShow = [];
  for (var i = 0; i < allThreads.length; i++) {
    var thread = allThreads[i];
    var titleMatches = thread.title.toLowerCase().indexOf(searchQuery.toLowerCase()) !== -1;
    var bodyMatches = thread.body.toLowerCase().indexOf(contentSearchQuery.toLowerCase()) !== -1;
    
    if (titleMatches && bodyMatches) {
      threadsToShow.push(thread);
    }
  }
  
  // sort the threads
  if (sortBy === 'oldest') {
    threadsToShow.sort(function(a, b) {
      return new Date(a.created) - new Date(b.created);
    });
  } else {
    // newest first (default)
    threadsToShow.sort(function(a, b) {
      return new Date(b.created) - new Date(a.created);
    });
  }
  
  // no threads found message
  if (threadsToShow.length === 0) {
    gridContainer.innerHTML = '<div class="col-12"><div class="card p-4">No threads found.</div></div>';
    return;
  }
  
  // create cards for each thread
  for (var i = 0; i < threadsToShow.length; i++) {
    var currentThread = threadsToShow[i];
    
    // make the column
    var columnDiv = document.createElement('div');
    columnDiv.className = 'col-md-4';
    
    // make the card
    var cardDiv = document.createElement('div');
    cardDiv.className = 'card blog-card shadow-sm flex-fill h-100';
    
    // add image
    var cardImage = document.createElement('img');
    cardImage.className = 'card-img-top';
    cardImage.src = currentThread.image || 'img/placeholder.png';
    
    // card body
    var cardBody = document.createElement('div');
    cardBody.className = 'card-body';
    
    // title
    var cardTitle = document.createElement('h5');
    cardTitle.className = 'card-title';
    cardTitle.textContent = currentThread.title;
    
    // meta info
    var metaInfo = document.createElement('p');
    metaInfo.className = 'text-muted small mb-1';
    metaInfo.textContent = currentThread.meta || 'By Community';
    
    // tags section
    var tagsContainer = document.createElement('div');
    tagsContainer.className = 'mb-3';
    if (currentThread.tags && currentThread.tags.length > 0) {
      for (var j = 0; j < currentThread.tags.length; j++) {
        var tagBadge = document.createElement('span');
        tagBadge.className = 'badge bg-secondary me-1';
        tagBadge.textContent = currentThread.tags[j];
        tagsContainer.appendChild(tagBadge);
      }
    }
    
    // excerpt/preview text
    var excerptText = document.createElement('p');
    excerptText.className = 'card-text';
    excerptText.textContent = currentThread.excerpt || currentThread.body.substring(0, 140);
    
    // comment count display
    var commentInfo = document.createElement('div');
    commentInfo.className = 'comment-number mb-2';
    var commentIcon = document.createElement('i');
    commentIcon.className = 'fas fa-comment';
    var commentCountText = document.createElement('span');
    var totalComments = currentThread.comments ? currentThread.comments.length : 0;
    commentCountText.textContent = ' ' + totalComments + ' comments';
    commentInfo.appendChild(commentIcon);
    commentInfo.appendChild(commentCountText);
    
    // read more button container
    var btnContainer = document.createElement('div');
    btnContainer.className = 'text-center';
    var readMoreBtn = document.createElement('a');
    readMoreBtn.className = 'btn btn-outline-dark btn-sm';
    readMoreBtn.href = '#';
    readMoreBtn.textContent = 'Read more';
    readMoreBtn.threadId = currentThread.id;
    readMoreBtn.onclick = function(e) {
      e.preventDefault();
      openThreadModal(this.threadId);
    };
    btnContainer.appendChild(readMoreBtn);
    
    // put it all together
    cardBody.appendChild(cardTitle);
    cardBody.appendChild(metaInfo);
    cardBody.appendChild(tagsContainer);
    cardBody.appendChild(excerptText);
    cardBody.appendChild(commentInfo);
    cardBody.appendChild(btnContainer);
    
    cardDiv.appendChild(cardImage);
    cardDiv.appendChild(cardBody);
    columnDiv.appendChild(cardDiv);
    gridContainer.appendChild(columnDiv);
  }
}

// Open the modal to show full thread details
function openThreadModal(threadId) {
  // find the thread we want to show
  var selectedThread = null;
  for (var i = 0; i < allThreads.length; i++) {
    if (allThreads[i].id === threadId) {
      selectedThread = allThreads[i];
      break;
    }
  }
  
  if (!selectedThread) {
    return;
  }
  
  // remove any old modal if it exists
  var existingModal = document.getElementById('forumDetailModal');
  if (existingModal) {
    existingModal.remove();
  }
  
  // build the comments HTML
  var commentsHTML = '';
