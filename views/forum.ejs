// Make text safe for HTML - prevents XSS attacks
function makeTextSafe(text) {
  var tempDiv = document.createElement('div');
  tempDiv.textContent = text;
  return tempDiv.innerHTML;
}

// Format date for display
function formatDate(dateString) {
  var date = new Date(dateString);
  return date.toLocaleString();
}

// Add a new comment to a thread
function postComment(threadId) {
  var commentBox = document.getElementById('commentInput_' + threadId);
  var commentContent = commentBox.value.trim();
  
  // make sure they actually wrote something
  if (commentContent === '') {
    alert('Please write a comment before submitting.');
    return;
  }
  
  // Send to server via AJAX
  var formData = new FormData();
  formData.append('text', commentContent);
  
  fetch('/forum/threads/' + threadId + '/comments', {
    method: 'POST',
    body: formData
  })
  .then(function(response) {
    if (response.ok) {
      return response.json();
    }
    throw new Error('Failed to post comment');
  })
  .then(function(data) {
    // Find the thread and add the comment
    for (var i = 0; i < allThreads.length; i++) {
      if (allThreads[i].id === threadId) {
        if (!allThreads[i].comments) {
          allThreads[i].comments = [];
        }
        allThreads[i].comments.push(data.comment);
        break;
      }
    }
    
    // Close and reopen modal to show new comment
    var modalEl = document.getElementById('forumDetailModal');
    var bsModal = bootstrap.Modal.getInstance(modalEl);
    bsModal.hide();
    
    setTimeout(function() {
      openThreadModal(threadId);
    }, 300);
  })
  .catch(function(error) {
    console.error('Error:', error);
    alert('Failed to post comment: ' + error.message);
  });
}

// Delete a comment from a thread
function removeComment(threadId, commentId) {
  // make sure they really want to delete
  if (!confirm('Delete this comment? This action cannot be undone.')) {
    return;
  }
  
  // Send delete request to server
  fetch('/forum/threads/' + threadId + '/comments/' + commentId, {
    method: 'POST'
  })
  .then(function(response) {
    if (response.ok) {
      // Find the thread and remove the comment
      for (var i = 0; i < allThreads.length; i++) {
        if (allThreads[i].id === threadId) {
          allThreads[i].comments = allThreads[i].comments.filter(function(c) {
            return c.id !== commentId;
          });
          break;
        }
      }
      
      // refresh modal
      var modalEl = document.getElementById('forumDetailModal');
      var bsModal = bootstrap.Modal.getInstance(modalEl);
      bsModal.hide();
      
      setTimeout(function() {
        openThreadModal(threadId);
      }, 300);
      
      showAllThreads();
    } else {
      alert('Failed to delete comment');
    }
  })
  .catch(function(error) {
    console.error('Error:', error);
    alert('Error deleting comment: ' + error.message);
  });
}

// Load thread data into the form for editing
function startEditingThread(threadId) {
  // find thread to edit
  var threadToEdit = null;
  for (var i = 0; i < allThreads.length; i++) {
    if (allThreads[i].id === threadId) {
      threadToEdit = allThreads[i];
      break;
    }
  }
  
  if (!threadToEdit) {
    return;
  }
  
  // fill in the form with thread data
  document.getElementById('threadTitle').value = threadToEdit.title;
  document.getElementById('threadBody').value = threadToEdit.body;
  
  // convert tags array back to string
  if (threadToEdit.tags && threadToEdit.tags.length > 0) {
    var tagsString = threadToEdit.tags.join(', ');
    document.getElementById('threadTags').value = tagsString;
  }
  
  // update all the counters
  updateTitleCount();
  updateMessageCount();
  updateTagsCount();
  
  // show image if there is one
  if (threadToEdit.image && threadToEdit.image !== 'img/placeholder.png') {
    currentImage = threadToEdit.image;
    document.getElementById('previewImg').src = threadToEdit.image;
    document.getElementById('imagePreview').style.display = 'block';
  }
  
  // change button to say "Update" instead of "Post"
  document.getElementById('postBtnText').textContent = 'Update Thread';
  
  // remember we're editing
  editingThreadId = threadId;
  
  // enable post button
  checkPostButton();
  
  // close modal
  var modalEl = document.getElementById('forumDetailModal');
  var bsModal = bootstrap.Modal.getInstance(modalEl);
  bsModal.hide();
  
  // scroll to top so user can see the form
  window.scrollTo({ top: 0, behavior: 'smooth' });
}

// Delete a thread completely
function removeThread(threadId) {
  if (!confirm('Delete this thread? This action cannot be undone.')) {
    return;
  }
  
  // Send delete request to server
  fetch('/forum/threads/' + threadId + '/delete', {
    method: 'POST'
  })
  .then(function(response) {
    if (response.ok) {
      // remove thread from array
      allThreads = allThreads.filter(function(t) {
        return t.id !== threadId;
      });
      
      // close modal
      var modalEl = document.getElementById('forumDetailModal');
      var bsModal = bootstrap.Modal.getInstance(modalEl);
      bsModal.hide();
      
      // refresh display
      showAllThreads();
    } else {
      alert('Failed to delete thread');
    }
  })
  .catch(function(error) {
    console.error('Error:', error);
    alert('Error deleting thread: ' + error.message);
  });
}

// Handle form submission when user clicks post button
document.getElementById('threadForm').addEventListener('submit', function(e) {
  e.preventDefault();
  
  // get all the form values
  var titleVal = document.getElementById('threadTitle').value.trim();
  var bodyVal = document.getElementById('threadBody').value.trim();
  var tagsVal = document.getElementById('threadTags').value;
  
  // double check validation before submitting
  if (titleVal.length < 10) {
    alert('Title must be at least 10 characters');
    return;
  }
  
  if (bodyVal.length < 20) {
    alert('Message must be at least 20 characters');
    return;
  }
  
  // Send form data to server
  var formData = new FormData();
  formData.append('title', titleVal);
  formData.append('body', bodyVal);
  formData.append('tags', tagsVal);
  formData.append('image', currentImage);
  
  if (editingThreadId) {
    // Update existing thread
    fetch('/forum/threads/' + editingThreadId, {
      method: 'POST',
      body: formData
    })
    .then(function(response) {
      if (response.ok) {
        return response.json();
      }
      throw new Error('Failed to update thread');
    })
    .then(function(data) {
      // Update the thread in our array
      for (var i = 0; i < allThreads.length; i++) {
        if (allThreads[i].id === editingThreadId) {
          allThreads[i] = data.thread;
          break;
        }
      }
      
      // Reset form
      resetForm();
      showAllThreads();
      alert('Thread updated successfully!');
    })
    .catch(function(error) {
      console.error('Error:', error);
      alert('Failed to update thread: ' + error.message);
    });
  } else {
    // Create new thread
    fetch('/forum/threads', {
      method: 'POST',
      body: formData
    })
    .then(function(response) {
      if (response.ok) {
        return response.json();
      }
      throw new Error('Failed to create thread');
    })
    .then(function(data) {
      // Add new thread to our array
      allThreads.unshift(data.thread);
      
      // Reset form
      resetForm();
      showAllThreads();
      alert('Thread posted successfully!');
    })
    .catch(function(error) {
      console.error('Error:', error);
      alert('Failed to post thread: ' + error.message);
    });
  }
});

