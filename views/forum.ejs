    <style>
      /* Styles for the create thread card */
      .create-card {
        border-radius: 12px;
        padding: 18px;
        border: 1px solid var(--neutralblackb-100);
        background: var(--neutralwhitew-900);
      }
      
      .thread-row {
        margin-top: 18px;
      }
      
      /* tried to make the cards look better */
      .thread-card .card-body {
        display: flex;
        flex-direction: column;
      }
      
      .small-muted{
        color: var(--neutralblackb-600);
        font-size: 0.95rem;
      }
      
      .create-actions {
        display: flex;
        justify-content: flex-end;
        gap: 8px;
        margin-top: 12px;
      }
      
      /* buttons should stack on phone screens */
      @media (max-width: 768px) {
        .create-actions {
          flex-direction: column-reverse;
        }
      }
      
      /* Comment stuff - this took forever to get right */
      .comment-section {
        max-height: 400px;
        overflow-y: auto;
        border-top: 1px solid #e5e7eb;
        padding-top: 1rem;
        margin-top: 1rem;
      }
      
      .comment-box {
        padding: 0.75rem;
        background: #f9fafb;
        border-radius: 8px;
        margin-bottom: 0.75rem;
      }
      
      .comment-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
      }
      
      .comment-author-name {
        font-weight: 600;
        font-size: 0.9rem;
      }
      
      .comment-time {
        font-size: 0.75rem;
        color: #6b7280;
      }
      
      .comment-message {
        font-size: 0.9rem;
        margin: 0;
      }
      
      .comment-btns {
        margin-top: 0.5rem;
        display: flex;
        gap: 0.5rem;
      }
      
      .comment-number {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
        color: #6b7280;
      }
      
      /* Error styling - copied from bootstrap docs and modified */
      .form-control.error-input {
        border-color: #dc3545;
        padding-right: calc(1.5em + 0.75rem);
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right calc(0.375em + 0.1875rem) center;
        background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
      }
      
      .error-message {
        display: none;
        width: 100%;
        margin-top: 0.25rem;
        font-size: 0.875em;
        color: #dc3545;
      }
      
      .error-message.show-error {
        display: block;
      }
      
      /* Character counter stuff */
      .counter-text {
        font-size: 0.875rem;
        color: #6c757d;
        text-align: right;
        margin-top: 0.25rem;
      }
      
      .counter-text.almost-full {
        color: #ffc107;
      }
      
      .counter-text.too-much {
        color: #dc3545;
      }
    </style>
</head>
