<div class="container my-5">

  <!-- Form to create new thread -->
  <div class="container my-4">
    <div class="row">
      <div class="col-12">
        <div class="create-card">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="mb-0">Start a discussion</h5>
          </div>

          <% if (!user) { %>
            <div class="alert alert-info">
              Please <a href="/login">login</a> to create a new thread.
            </div>
          <% } else { %>
          <form id="threadForm" action="/forum/threads" method="POST" enctype="multipart/form-data">
            <!-- Title field -->
            <div class="mb-3">
              <label for="threadTitle" class="form-label small text-muted">
                Title <span class="text-danger">*</span>
              </label>
              <input 
                type="text" 
                id="threadTitle" 
                name="title"
                class="form-control" 
                maxlength="120" 
                placeholder="e.g. Best cleats for firm ground"
                required
              >
              <div class="error-message" id="titleError"></div>
              <div class="counter-text" id="titleCounter">0 / 120 characters</div>
            </div>

            <!-- Message field -->
            <div class="mb-3">
              <label for="threadBody" class="form-label small text-muted">
                Message <span class="text-danger">*</span>
              </label>
              <textarea 
                id="threadBody" 
                name="body"
                class="form-control" 
                rows="5" 
                maxlength="2000"
                placeholder="Write your question or advice..."
                required
              ></textarea>
              <div class="error-message" id="bodyError"></div>
              <div class="counter-text" id="bodyCounter">0 / 2000 characters</div>
            </div>

            <!-- Tags field -->
            <div class="mb-3">
              <label for="threadTags" class="form-label small text-muted">
                Tags (comma separated) <span class="text-muted small">(Optional)</span>
              </label>
              <input 
                id="threadTags" 
                name="tags"
                class="form-control" 
                placeholder="e.g. running, cleats, sizing"
                maxlength="200"
              >
              <div class="error-message" id="tagsError"></div>
              <div class="counter-text" id="tagsCounter">0 / 200 characters</div>
            </div>

            <!-- Image upload -->
            <div class="mb-3">
              <label for="threadImage" class="form-label small text-muted">
                Image <span class="text-muted small">(Optional, max 5MB)</span>
              </label>
              <input 
                id="threadImage" 
                name="image"
                type="file" 
                class="form-control" 
                accept="image/jpeg,image/jpg,image/png,image/gif,image/webp"
              >
              <div class="error-message" id="imageError"></div>
              <div id="imagePreview" style="display: none; margin-top: 10px;">
                <img id="previewImg" src="" alt="Preview" style="max-width: 200px; max-height: 200px; border-radius: 8px;">
                <button id="removeImage" type="button" class="btn btn-sm btn-danger" style="margin-top: 10px;">
                  <i class="fas fa-times"></i> Remove
                </button>
              </div>
            </div>

            <!-- Buttons -->
            <div class="create-actions">
              <button id="clearBtn" type="button" class="btn btn-outline-dark">Clear</button>
              <button id="postBtn" type="submit" class="btn btn-primary">
                <span id="postBtnText">Post Thread</span>
              </button>
            </div>
          </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Search and sort section -->
  <div class="container my-4">
    <div class="row">
      <div class="col-md-4 mb-3">
        <label class="form-label small text-muted">Search by title</label>
        <input id="searchInput" class="form-control" placeholder="Search threads..." value="<%= searchQuery || '' %>">
      </div>
      <div class="col-md-4 mb-3">
        <label class="form-label small text-muted">Search by content</label>
        <input id="contentSearch" class="form-control" placeholder="Search in post content..." value="<%= contentQuery || '' %>">
      </div>
      <div class="col-md-4 mb-3">
        <label class="form-label small text-muted">Sort by</label>
        <select id="sortSelect" class="form-control">
          <option value="newest" <%= sortBy === 'newest' ? 'selected' : '' %>>Newest First</option>
          <option value="oldest" <%= sortBy === 'oldest' ? 'selected' : '' %>>Oldest First</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Threads will show up here -->
  <div class="row g-4 thread-row" id="threadsGrid">
    <% if (threads && threads.length > 0) { %>
      <% threads.forEach(function(thread) { %>
        <div class="col-md-4">
          <div class="card blog-card shadow-sm flex-fill h-100">
            <img src="<%= thread.image || '/img/placeholder.png' %>" class="card-img-top" alt="<%= thread.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= thread.title %></h5>
              <p class="text-muted small mb-1">
                <%= thread.meta || 'By SportStore • Community' %>
              </p>
              <div class="mb-3">
                <% if (thread.tags && thread.tags.length > 0) { %>
                  <% thread.tags.forEach(function(tag) { %>
                    <span class="badge bg-secondary"><%= tag %></span>
                  <% }); %>
                <% } %>
              </div>
              <p class="card-text">
                <%= thread.excerpt || thread.body.substring(0, 140) %>
              </p>
              <div class="comment-number mb-2">
                <i class="fas fa-comment"></i>
                <span><%= thread.comments ? thread.comments.length : 0 %> comments</span>
              </div>
              <div class="text-center">
                <a href="/forum/threads/<%= thread._id %>" class="btn btn-outline-dark btn-sm">Read more</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-info text-center">
          No threads found. Be the first to start a discussion!
        </div>
      </div>
    <% } %>
  </div>
