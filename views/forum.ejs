<script>
// Client-side validation and interactivity
document.addEventListener('DOMContentLoaded', function() {
  const threadForm = document.getElementById('threadForm');
  if (!threadForm) return;

  // Validate the title field
  function validateTitle() {
    var titleField = document.getElementById('threadTitle');
    var titleText = titleField.value;
    var titleLen = titleText.length;
    var errorBox = document.getElementById('titleError');
    
    titleField.classList.remove('error-input');
    errorBox.classList.remove('show-error');
    errorBox.textContent = '';
    
    if (titleLen > 0 && titleLen < 10) {
      titleField.classList.add('error-input');
      errorBox.textContent = 'Title must be at least 10 characters';
      errorBox.classList.add('show-error');
      return false;
    }
    
    if (titleLen > 0 && titleText.trim().length === 0) {
      titleField.classList.add('error-input');
      errorBox.textContent = 'Title cannot be empty or only spaces';
      errorBox.classList.add('show-error');
      return false;
    }
    
    var allowedChars = /^[a-zA-Z0-9\s\-\?\!\.\,\'\"]+$/;
    if (titleLen > 0 && !allowedChars.test(titleText)) {
      titleField.classList.add('error-input');
      errorBox.textContent = 'Title contains invalid characters';
      errorBox.classList.add('show-error');
      return false;
    }
    
    return true;
  }

  // Validate the message field
  function validateMessage() {
    var messageField = document.getElementById('threadBody');
    var messageText = messageField.value;
    var messageLen = messageText.length;
    var errorBox = document.getElementById('bodyError');
    
    messageField.classList.remove('error-input');
    errorBox.classList.remove('show-error');
    errorBox.textContent = '';
    
    if (messageLen > 0 && messageLen < 20) {
      messageField.classList.add('error-input');
      errorBox.textContent = 'Message must be at least 20 characters';
      errorBox.classList.add('show-error');
      return false;
    }
    
    if(messageLen > 0 && messageText.trim().length === 0){
      messageField.classList.add('error-input');
      errorBox.textContent = 'Message cannot be empty or only spaces';
      errorBox.classList.add('show-error');
      return false;
    }
    
    return true;
  }

  // Validate tags
  function validateTags() {
    var tagsField = document.getElementById('threadTags');
    var tagsText = tagsField.value;
    var tagsLen = tagsText.length;
    var errorBox = document.getElementById('tagsError');
    
    tagsField.classList.remove('error-input');
    errorBox.classList.remove('show-error');
    errorBox.textContent = '';
    
    if (tagsLen > 0) {
      var tagList = tagsText.split(',');
      var cleanedTags = [];
      
      for (var i = 0; i < tagList.length; i++) {
        var singleTag = tagList[i].trim();
        if (singleTag.length > 0) {
          cleanedTags.push(singleTag);
        }
      }
      
      if (cleanedTags.length > 10) {
        tagsField.classList.add('error-input');
        errorBox.textContent = 'Maximum 10 tags allowed';
        errorBox.classList.add('show-error');
        return false;
      }
      
      var validTagChars = /^[a-zA-Z0-9\s\-\,]+$/;
      if (!validTagChars.test(tagsText)) {
        tagsField.classList.add('error-input');
        errorBox.textContent = 'Tags can only contain letters, numbers, hyphens, and commas';
        errorBox.classList.add('show-error');
        return false;
      }
    }
    
    return true;
  }

  // Check if uploaded image is valid
  function validateImage() {
    var imageField = document.getElementById('threadImage');
    var errorBox = document.getElementById('imageError');
    
    imageField.classList.remove('error-input');
    errorBox.classList.remove('show-error');
    errorBox.textContent = '';
    
    if (imageField.files.length > 0) {
      var selectedFile = imageField.files[0];
      var maxFileSize = 5 * 1024 * 1024; // 5MB in bytes
      
      if (selectedFile.size > maxFileSize) {
        imageField.classList.add('error-input');
        errorBox.textContent = 'Image size must be less than 5MB';
        errorBox.classList.add('show-error');
        document.getElementById('imagePreview').style.display = 'none';
        return false;
      }
      
      var okTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'];
      var fileIsOk = okTypes.includes(selectedFile.type);
      
      if (!fileIsOk) {
        imageField.classList.add('error-input');
        errorBox.textContent = 'Only JPEG, PNG, GIF, and WebP images are allowed';
        errorBox.classList.add('show-error');
        document.getElementById('imagePreview').style.display = 'none';
        return false;
      }
      
      var fileReader = new FileReader();
      fileReader.onload = function(event) {
        document.getElementById('previewImg').src = event.target.result;
        document.getElementById('imagePreview').style.display = 'block';
      };
      fileReader.readAsDataURL(selectedFile);
    }
    
    return true;
  }

  // Update character counters
  function updateTitleCount() {
    var titleField = document.getElementById('threadTitle');
    var counterDisplay = document.getElementById('titleCounter');
    var currentLength = titleField.value.length;
    
    counterDisplay.textContent = currentLength + ' / 120 characters';
    
    counterDisplay.classList.remove('almost-full', 'too-much');
    if (currentLength >= 108) {
      counterDisplay.classList.add('too-much');
    } else if (currentLength >= 90) {
      counterDisplay.classList.add('almost-full');
    }
  }

  function updateMessageCount() {
    var messageField = document.getElementById('threadBody');
    var counterDisplay = document.getElementById('bodyCounter');
    var currentLength = messageField.value.length;
    
    counterDisplay.textContent = currentLength + ' / 2000 characters';
    
    counterDisplay.classList.remove('almost-full', 'too-much');
    if (currentLength >= 1800) {
      counterDisplay.classList.add('too-much');
    } else if (currentLength >= 1500) {
      counterDisplay.classList.add('almost-full');
    }
  }

  function updateTagsCount() {
    var tagsField = document.getElementById('threadTags');
    var counterDisplay = document.getElementById('tagsCounter');
    var currentLength = tagsField.value.length;
    
    counterDisplay.textContent = currentLength + ' / 200 characters';
    
    counterDisplay.classList.remove('almost-full', 'too-much');
    if (currentLength >= 180) {
      counterDisplay.classList.add('too-much');
    } else if(currentLength >= 150){
      counterDisplay.classList.add('almost-full');
    }
  }

  // Check if we should enable or disable the post button
  function checkPostButton() {
    var titleField = document.getElementById('threadTitle');
    var messageField = document.getElementById('threadBody');
    var postButton = document.getElementById('postBtn');
    
    var titleValue = titleField.value.trim();
    var messageValue = messageField.value.trim();
    
    var titleIsGood = titleValue.length >= 10 && titleValue.length <= 120;
    var messageIsGood = messageValue.length >= 20 && messageValue.length <= 2000;
    
    var errorsExist = document.querySelectorAll('.error-input').length > 0;
    
    if (titleIsGood && messageIsGood && !errorsExist) {
      postButton.disabled = false;
    } else {
      postButton.disabled = true;
    }
  }

  // Clear button functionality
  document.getElementById('clearBtn').addEventListener('click', function() {
    if (confirm('Clear the form?')) {
      threadForm.reset();
      document.getElementById('imagePreview').style.display = 'none';
      
      var errorFields = document.querySelectorAll('.error-input');
      for (var i = 0; i < errorFields.length; i++) {
        errorFields[i].classList.remove('error-input');
      }
      
      var errorMsgs = document.querySelectorAll('.error-message');
      for (var i = 0; i < errorMsgs.length; i++) {
        errorMsgs[i].classList.remove('show-error');
      }
      
      document.getElementById('titleCounter').textContent = '0 / 120 characters';
      document.getElementById('bodyCounter').textContent = '0 / 2000 characters';
      document.getElementById('tagsCounter').textContent = '0 / 200 characters';
      
      checkPostButton();
    }
  });

  // Remove image button
  document.getElementById('removeImage').addEventListener('click', function() {
    document.getElementById('threadImage').value = '';
    document.getElementById('imagePreview').style.display = 'none';
    document.getElementById('threadImage').classList.remove('error-input');
    document.getElementById('imageError').classList.remove('show-error');
    checkPostButton();
  });

  // Setup all the input listeners for live validation
  document.getElementById('threadTitle').addEventListener('input', function() {
    updateTitleCount();
    validateTitle();
    checkPostButton();
  });

  document.getElementById('threadBody').addEventListener('input', function() {
    updateMessageCount();
    validateMessage();
    checkPostButton();
  });

  document.getElementById('threadTags').addEventListener('input', function() {
    updateTagsCount();
    validateTags();
    checkPostButton();
  });

  document.getElementById('threadImage').addEventListener('change', function() {
    validateImage();
    checkPostButton();
  });

  // Form submission validation
  threadForm.addEventListener('submit', function(e) {
    if (!validateTitle() || !validateMessage() || !validateTags() || !validateImage()) {
      e.preventDefault();
      alert('Please fix the errors in the form before submitting.');
    }
  });

  // Initialize
  checkPostButton();
});

// Client-side filtering for threads
document.getElementById('searchInput').addEventListener('input', function() {
  filterThreads();
});

document.getElementById('contentSearch').addEventListener('input', function() {
  filterThreads();
});

document.getElementById('sortSelect').addEventListener('change', function() {
  // Reload page with new sort parameter
  const urlParams = new URLSearchParams(window.location.search);
  urlParams.set('sort', this.value);
  window.location.search = urlParams.toString();
});

function filterThreads() {
  const searchQuery = document.getElementById('searchInput').value.toLowerCase();
  const contentQuery = document.getElementById('contentSearch').value.toLowerCase();
  const cards = document.querySelectorAll('#threadsGrid .col-md-4');
  
  cards.forEach(function(card) {
    const title = card.querySelector('.card-title').textContent.toLowerCase();
    const content = card.querySelector('.card-text').textContent.toLowerCase();
    
    const titleMatch = title.includes(searchQuery);
    const contentMatch = content.includes(contentQuery);
    
    if (titleMatch && contentMatch) {
      card.style.display = '';
    } else {
      card.style.display = 'none';
    }
  });
