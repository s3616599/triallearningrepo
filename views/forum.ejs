  <!-- Bootstrap JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Form Validation and Interaction Script -->
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const threadForm = document.getElementById('threadForm');
    if (!threadForm) return;

    // Validation functions
    function validateTitle() {
      const field = document.getElementById('threadTitle');
      const value = field.value.trim();
      const error = document.getElementById('titleError');
      
      field.classList.remove('is-invalid');
      error.textContent = '';
      
      if (value.length > 0 && value.length < 10) {
        field.classList.add('is-invalid');
        error.textContent = 'Title must be at least 10 characters';
        return false;
      }
      
      if (value.length > 0 && !/^[a-zA-Z0-9\s\-\?\!\.\,\'\"]+$/.test(value)) {
        field.classList.add('is-invalid');
        error.textContent = 'Title contains invalid characters';
        return false;
      }
      
      return true;
    }

    function validateBody() {
      const field = document.getElementById('threadBody');
      const value = field.value.trim();
      const error = document.getElementById('bodyError');
      
      field.classList.remove('is-invalid');
      error.textContent = '';
      
      if (value.length > 0 && value.length < 20) {
        field.classList.add('is-invalid');
        error.textContent = 'Message must be at least 20 characters';
        return false;
      }
      
      return true;
    }

    function validateTags() {
      const field = document.getElementById('threadTags');
      const value = field.value.trim();
      const error = document.getElementById('tagsError');
      
      field.classList.remove('is-invalid');
      error.textContent = '';
      
      if (value.length > 0) {
        const tags = value.split(',').map(t => t.trim()).filter(t => t.length > 0);
        if (tags.length > 10) {
          field.classList.add('is-invalid');
          error.textContent = 'Maximum 10 tags allowed';
          return false;
        }
      }
      
      return true;
    }

    function validateImage() {
      const field = document.getElementById('threadImage');
      const error = document.getElementById('imageError');
      
      field.classList.remove('is-invalid');
      error.textContent = '';
      
      if (field.files.length > 0) {
        const file = field.files[0];
        const maxSize = 5 * 1024 * 1024; // 5MB
        
        if (file.size > maxSize) {
          field.classList.add('is-invalid');
          error.textContent = 'Image size must be less than 5MB';
          document.getElementById('imagePreview').style.display = 'none';
          return false;
        }
        
        if (!['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'].includes(file.type)) {
          field.classList.add('is-invalid');
          error.textContent = 'Only JPEG, PNG, GIF, and WebP images are allowed';
          document.getElementById('imagePreview').style.display = 'none';
          return false;
        }
        
        // Show preview
        const reader = new FileReader();
        reader.onload = function(e) {
          document.getElementById('previewImg').src = e.target.result;
          document.getElementById('imagePreview').style.display = 'block';
        };
        reader.readAsDataURL(file);
      }
      
      return true;
    }

    // Character counters
    function updateCounter(fieldId, counterId, max) {
      const field = document.getElementById(fieldId);
      const counter = document.getElementById(counterId);
      const length = field.value.length;
      counter.textContent = length + ' / ' + max + ' characters';
      
      if (length > max * 0.9) {
        counter.style.color = '#dc3545';
      } else if (length > max * 0.75) {
        counter.style.color = '#ffc107';
      } else {
        counter.style.color = '#6c757d';
      }
    }

    // Event listeners
    document.getElementById('threadTitle').addEventListener('input', function() {
      validateTitle();
      updateCounter('threadTitle', 'titleCounter', 120);
    });

    document.getElementById('threadBody').addEventListener('input', function() {
      validateBody();
      updateCounter('threadBody', 'bodyCounter', 2000);
    });

    document.getElementById('threadTags').addEventListener('input', function() {
      validateTags();
      updateCounter('threadTags', 'tagsCounter', 200);
    });

    document.getElementById('threadImage').addEventListener('change', validateImage);

    document.getElementById('removeImage').addEventListener('click', function() {
      document.getElementById('threadImage').value = '';
      document.getElementById('imagePreview').style.display = 'none';
    });

    document.getElementById('clearBtn').addEventListener('click', function() {
      if (confirm('Clear the form?')) {
        threadForm.reset();
        document.getElementById('imagePreview').style.display = 'none';
        document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
        updateCounter('threadTitle', 'titleCounter', 120);
        updateCounter('threadBody', 'bodyCounter', 2000);
        updateCounter('threadTags', 'tagsCounter', 200);
      }
    });

    // Form submission
    threadForm.addEventListener('submit', function(e) {
      if (!validateTitle() || !validateBody() || !validateTags() || !validateImage()) {
        e.preventDefault();
        alert('Please fix the errors in the form before submitting.');
      }
    });
  });

  // Client-side filtering
  document.getElementById('searchInput')?.addEventListener('input', filterThreads);
  document.getElementById('contentSearch')?.addEventListener('input', filterThreads);

  function filterThreads() {
    const searchQuery = document.getElementById('searchInput').value.toLowerCase();
    const contentQuery = document.getElementById('contentSearch').value.toLowerCase();
    const cards = document.querySelectorAll('.thread-card-item');
    
    cards.forEach(function(card) {
      const title = card.querySelector('.fw-bold').textContent.toLowerCase();
      const content = card.querySelector('p').textContent.toLowerCase();
      
      const titleMatch = title.includes(searchQuery);
      const contentMatch = content.includes(contentQuery);
      
      if (titleMatch && contentMatch) {
        card.style.display = '';
      } else {
        card.style.display = 'none';
      }
    });
  }

  // Sort functionality
  document.getElementById('sortSelect')?.addEventListener('change', function() {
    const urlParams = new URLSearchParams(window.location.search);
    urlParams.set('sort', this.value);
    window.location.search = urlParams.toString();
  });
  </script>
</body>
</html>
