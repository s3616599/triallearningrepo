<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/globals.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/styleguide.css" />

  <title>Forum - Discussion Threads</title>
</head>
<body>
  <div class="prl-wrapper">
    <!-- HEADER (NAVBAR) -->
    <nav class="navbar navbar-expand-lg bg-light border-bottom py-3">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">Ecommerce</a>
        <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navMenu">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navMenu" class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto ms-4 gap-3">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
            <li class="nav-item"><a class="nav-link" href="/blogs">Blogs</a></li>
            <li class="nav-item"><a class="nav-link active" href="/forum">Forum</a></li>
            <li class="nav-item"><a class="nav-link" href="/sitemap">Sitemap</a></li>
          </ul>
          <form class="d-flex me-3" action="/search" method="GET">
            <input class="form-control" type="search" name="q" placeholder="Search products">
          </form>
          <a href="/cart" class="me-3"><i class="fa-solid fa-bag-shopping fs-5"></i></a>
          <% if (user) { %>
            <a href="/account"><i class="fa-solid fa-user fs-5"></i></a>
          <% } else { %>
            <a href="/login"><i class="fa-regular fa-user fs-5"></i></a>
          <% } %>
        </div>
      </div>
    </nav>

    <!-- BREADCRUMB -->
    <nav class="bg-light py-2 border-bottom">
      <div class="container">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Forum</li>
        </ol>
      </div>
    </nav>

    <!-- FORUM HEADER SECTION -->
    <section class="py-5">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h2 class="fw-bold mb-3">Community Forum</h2>
            <div class="mb-2">
              <span class="text-warning">
                <i class="fa-solid fa-users"></i>
              </span>
              <span class="ms-2 text-muted">
                (<%= threads ? threads.length : 0 %> discussions)
              </span>
            </div>
            <p class="mb-4">Join the conversation! Share your questions, tips, and experiences about sports gear and training.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- FORUM TABS -->
    <section class="border-top py-4">
      <div class="container">
        <ul class="nav nav-tabs mb-3" id="forumTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-threads-tab" data-bs-toggle="tab" data-bs-target="#all-threads" type="button" role="tab">All Discussions</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="create-thread-tab" data-bs-toggle="tab" data-bs-target="#create-thread" type="button" role="tab">Start Discussion</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="my-threads-tab" data-bs-toggle="tab" data-bs-target="#my-threads" type="button" role="tab">My Threads</button>
          </li>
        </ul>
        
        <div class="tab-content" id="forumTabContent">
          <!-- ALL THREADS TAB -->
          <div class="tab-pane fade show active" id="all-threads" role="tabpanel">
            <!-- FILTER AND SEARCH SECTION -->
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h4 class="mb-0">All Discussions <span class="text-muted">(<%= threads ? threads.length : 0 %>)</span></h4>
              <div>
                <button class="btn btn-outline-secondary btn-sm me-2" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                  <i class="fa-solid fa-filter"></i> Filter
                </button>
              </div>
            </div>

            <!-- Filter Controls (Collapsible) -->
            <div class="collapse mb-4" id="filterCollapse">
              <div class="card card-body">
                <div class="row g-3">
                  <div class="col-md-4">
                    <label class="form-label small">Search by title</label>
                    <input id="searchInput" class="form-control" type="text" placeholder="Search threads..." value="<%= searchQuery || '' %>">
                  </div>
                  <div class="col-md-4">
                    <label class="form-label small">Search by content</label>
                    <input id="contentSearch" class="form-control" type="text" placeholder="Search in post content..." value="<%= contentQuery || '' %>">
                  </div>
                  <div class="col-md-4">
                    <label class="form-label small">Sort by</label>
                    <select id="sortSelect" class="form-control">
                      <option value="newest" <%= sortBy === 'newest' ? 'selected' : '' %>>Newest First</option>
                      <option value="oldest" <%= sortBy === 'oldest' ? 'selected' : '' %>>Oldest First</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>

            <!-- Thread List -->
            <div id="threadList" class="row g-4">
              <% if (threads && threads.length > 0) { %>
                <% threads.forEach(function(thread) { %>
                  <div class="col-md-6 col-lg-4 thread-card-item">
                    <div class="card h-100 thread-preview" style="cursor:pointer;">
                      <img src="<%= thread.image || '/img/placeholder.png' %>" class="card-img-top" alt="Thread Image" style="height:180px;object-fit:cover;">
                      <div class="card-body">
                        <div class="mb-3">
                          <% if (thread.tags && thread.tags.length > 0) { %>
                            <% thread.tags.forEach(function(tag) { %>
                              <span class="badge bg-secondary me-1"><%= tag %></span>
                            <% }); %>
                          <% } %>
                        </div>
                        <h6 class="fw-bold mb-1"><%= thread.title %></h6>
                        <p class="text-muted small mb-1"><%= thread.meta || 'By Community' %></p>
                        <p class="mb-2"><%= thread.excerpt || thread.body.substring(0, 100) + '...' %></p>
                        <div class="d-flex align-items-center justify-content-between">
                          <small class="text-muted">
                            <i class="fa-solid fa-comment"></i> <%= thread.comments ? thread.comments.length : 0 %> comments
                          </small>
                          <a href="/forum/threads/<%= thread._id %>" class="btn btn-outline-dark btn-sm">Read more</a>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="col-12">
                  <div class="alert alert-info text-center">
                    No discussions found. Be the first to start a conversation!
                  </div>
                </div>
              <% } %>
            </div>

            <!-- Thread Detail View (Hidden by default) -->
            <div id="threadDetail" class="d-none"></div>
          </div>

          <!-- CREATE THREAD TAB -->
          <div class="tab-pane fade" id="create-thread" role="tabpanel">
            <% if (!user) { %>
              <div class="alert alert-info">
                Please <a href="/login">login</a> to create a new discussion thread.
              </div>
            <% } else { %>
              <h4 class="mb-4">Start a New Discussion</h4>
              
              <form id="threadForm" action="/forum/threads" method="POST" enctype="multipart/form-data">
                <!-- Title -->
                <div class="mb-3">
                  <label for="threadTitle" class="form-label">
                    Discussion Title <span class="text-danger">*</span>
                  </label>
                  <input 
                    type="text" 
                    id="threadTitle" 
                    name="title"
                    class="form-control" 
                    maxlength="120" 
                    placeholder="e.g. Best running shoes for marathon training?"
                    required
                  >
                  <div class="invalid-feedback" id="titleError"></div>
                  <small class="text-muted" id="titleCounter">0 / 120 characters</small>
                </div>

                <!-- Message -->
                <div class="mb-3">
                  <label for="threadBody" class="form-label">
                    Message <span class="text-danger">*</span>
                  </label>
                  <textarea 
                    id="threadBody" 
                    name="body"
                    class="form-control" 
                    rows="6" 
                    maxlength="2000"
                    placeholder="Share your thoughts, questions, or advice..."
                    required
                  ></textarea>
                  <div class="invalid-feedback" id="bodyError"></div>
                  <small class="text-muted" id="bodyCounter">0 / 2000 characters</small>
                </div>

                <!-- Tags -->
                <div class="mb-3">
                  <label for="threadTags" class="form-label">
                    Tags <span class="text-muted small">(Optional, comma separated)</span>
                  </label>
                  <input 
                    id="threadTags" 
                    name="tags"
                    class="form-control" 
                    placeholder="e.g. running, marathon, shoes"
                    maxlength="200"
                  >
                  <div class="invalid-feedback" id="tagsError"></div>
                  <small class="text-muted" id="tagsCounter">0 / 200 characters</small>
                </div>

                <!-- Image Upload -->
                <div class="mb-3">
                  <label for="threadImage" class="form-label">
                    Image <span class="text-muted small">(Optional, max 5MB)</span>
                  </label>
                  <input 
                    id="threadImage" 
                    name="image"
                    type="file" 
                    class="form-control" 
                    accept="image/jpeg,image/jpg,image/png,image/gif,image/webp"
                  >
                  <div class="invalid-feedback" id="imageError"></div>
                  
                  <!-- Image Preview -->
                  <div id="imagePreview" style="display: none; margin-top: 10px;">
                    <img id="previewImg" src="" alt="Preview" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
                    <button id="removeImage" type="button" class="btn btn-sm btn-danger ms-2">
                      <i class="fas fa-times"></i> Remove
                    </button>
                  </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-2">
                  <button type="button" class="btn btn-outline-secondary" id="clearBtn">
                    <i class="fa-solid fa-eraser"></i> Clear Form
                  </button>
                  <button type="submit" class="btn btn-primary" id="postBtn">
                    <i class="fa-solid fa-paper-plane"></i> Post Discussion
                  </button>
                </div>
              </form>
            <% } %>
          </div>

          <!-- MY THREADS TAB -->
          <div class="tab-pane fade" id="my-threads" role="tabpanel">
            <% if (!user) { %>
              <div class="alert alert-info">
                Please <a href="/login">login</a> to view your discussions.
              </div>
            <% } else { %>
              <h4 class="mb-4">My Discussions</h4>
              
              <div class="row g-4">
                <% 
                var myThreads = threads ? threads.filter(function(t) { 
                  return user && t.author && t.author.toString() === user._id.toString(); 
                }) : [];
                %>
                
                <% if (myThreads.length > 0) { %>
                  <% myThreads.forEach(function(thread) { %>
                    <div class="col-md-6 col-lg-4">
                      <div class="card h-100">
                        <img src="<%= thread.image || '/img/placeholder.png' %>" class="card-img-top" alt="Thread Image" style="height:180px;object-fit:cover;">
                        <div class="card-body">
                          <div class="mb-3">
                            <% if (thread.tags && thread.tags.length > 0) { %>
                              <% thread.tags.forEach(function(tag) { %>
                                <span class="badge bg-secondary me-1"><%= tag %></span>
                              <% }); %>
                            <% } %>
                          </div>
                          <h6 class="fw-bold mb-1"><%= thread.title %></h6>
                          <p class="mb-2"><%= thread.excerpt || thread.body.substring(0, 100) + '...' %></p>
                          <div class="d-flex align-items-center justify-content-between">
                            <small class="text-muted">
                              <i class="fa-solid fa-comment"></i> <%= thread.comments ? thread.comments.length : 0 %> comments
                            </small>
                            <a href="/forum/threads/<%= thread._id %>" class="btn btn-outline-dark btn-sm">View</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                <% } else { %>
                  <div class="col-12">
                    <div class="alert alert-info">
                      You haven't started any discussions yet. <a href="#create-thread" data-bs-toggle="tab" data-bs-target="#create-thread">Start one now!</a>
                    </div>
                  </div>
                <% } %>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </section>

    <!-- RELATED CATEGORIES -->
    <section class="py-5 bg-light">
      <div class="container">
        <h4 class="mb-4">Popular Categories</h4>
        <div class="row g-4">
          <div class="col-6 col-md-3">
            <div class="card h-100 text-center">
              <div class="card-body">
                <i class="fa-solid fa-running fs-1 text-primary mb-3"></i>
                <h6 class="card-title">Running</h6>
                <p class="text-muted small mb-0">125 discussions</p>
              </div>
            </div>
          </div>
          <div class="col-6 col-md-3">
            <div class="card h-100 text-center">
              <div class="card-body">
                <i class="fa-solid fa-basketball fs-1 text-warning mb-3"></i>
                <h6 class="card-title">Basketball</h6>
                <p class="text-muted small mb-0">89 discussions</p>
