      <div class="container">
        <a class="navbar-brand fw-bold" href="/">Ecommerce</a>
        <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navMenu">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navMenu" class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto ms-4 gap-3">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
            <li class="nav-item"><a class="nav-link" href="/blogs">Blogs</a></li>
            <li class="nav-item"><a class="nav-link active" href="/forum">Forum</a></li>
            <li class="nav-item"><a class="nav-link" href="/sitemap">Sitemap</a></li>
          </ul>
          <form class="d-flex me-3">
            <input class="form-control" type="search" placeholder="Search products">
          </form>
          <a href="/cart" class="me-3"><i class="fa-solid fa-bag-shopping fs-5"></i></a>
          <% if (user) { %>
            <a href="/account"><i class="fa-solid fa-user fs-5"></i></a>
          <% } else { %>
            <a href="/login"><i class="fa-regular fa-user fs-5"></i></a>
          <% } %>
        </div>
      </div>
    </nav>

    <!-- BREADCRUMB -->
    <nav class="bg-light py-2 border-bottom">
      <div class="container">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Forum</li>
        </ol>
      </div>
    </nav>

    <!-- FORUM HEADER SECTION -->
    <section class="py-5">
      <div class="container">
        <div class="row g-5">
          <!-- Forum Image/Icon -->
          <div class="col-md-5">
            <div class="card">
              <div class="card-body text-center p-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 420px; display: flex; align-items: center; justify-content: center;">
                <div>
                  <i class="fa-solid fa-comments fs-1 text-white mb-3" style="font-size: 120px;"></i>
                  <h3 class="text-white fw-bold">Community Forum</h3>
                  <p class="text-white">Join the conversation</p>
                </div>
              </div>
            </div>
          </div>
          <!-- Forum Info -->
          <div class="col-md-7">
            <h2 class="fw-bold mb-3">Sports Community Discussions</h2>
            <div class="mb-2">
              <span class="text-warning">
                <i class="fa-solid fa-users"></i>
                <i class="fa-solid fa-users"></i>
                <i class="fa-solid fa-users"></i>
                <i class="fa-solid fa-users"></i>
                <i class="fa-solid fa-users"></i>
              </span>
              <span class="ms-2 text-muted">(<%= threads ? threads.length : 0 %> active discussions)</span>
            </div>
            <div class="mb-3">
              <span class="fs-4 fw-bold text-success">Free to Join</span>
              <span class="badge bg-success ms-2">Active Community</span>
            </div>
            <p class="mb-4">Connect with fellow sports enthusiasts! Share your experiences, ask questions, and get advice on sports gear, training tips, and everything in between.</p>
            
            <% if (!user) { %>
              <div class="alert alert-info">
                <i class="fa-solid fa-info-circle me-2"></i>
                <a href="/login" class="alert-link">Login</a> to participate in discussions and create new threads.
              </div>
            <% } else { %>
              <div class="alert alert-success">
                <i class="fa-solid fa-check-circle me-2"></i>
                Welcome back, <strong><%= user.username || user.name %></strong>! You can now participate in all discussions.
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </section>

    <!-- FORUM TABS -->
    <section class="border-top py-4">
      <div class="container">
        <ul class="nav nav-tabs mb-3" id="forumTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="categories-tab" data-bs-toggle="tab" data-bs-target="#categories" type="button" role="tab">Categories</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="threads-tab" data-bs-toggle="tab" data-bs-target="#threads" type="button" role="tab">All Discussions</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="guidelines-tab" data-bs-toggle="tab" data-bs-target="#guidelines" type="button" role="tab">Guidelines</button>
          </li>
        </ul>
        
        <div class="tab-content" id="forumTabContent">
          <!-- CATEGORIES TAB -->
          <div class="tab-pane fade" id="categories" role="tabpanel">
            <div class="row g-4">
              <div class="col-md-6">
                <div class="card h-100">
                  <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                      <i class="fa-solid fa-running fs-2 text-primary me-3"></i>
                      <div>
                        <h5 class="card-title mb-0">Running & Athletics</h5>
                        <small class="text-muted">125 discussions</small>
                      </div>
                    </div>
                    <p class="card-text">Discuss running shoes, marathon training, track & field equipment, and running techniques.</p>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card h-100">
                  <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                      <i class="fa-solid fa-basketball fs-2 text-warning me-3"></i>
                      <div>
                        <h5 class="card-title mb-0">Basketball</h5>
                        <small class="text-muted">89 discussions</small>
                      </div>
                    </div>
                    <p class="card-text">Talk about basketball shoes, training equipment, court surfaces, and playing techniques.</p>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card h-100">
                  <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                      <i class="fa-solid fa-futbol fs-2 text-success me-3"></i>
                      <div>
                        <h5 class="card-title mb-0">Football/Soccer</h5>
                        <small class="text-muted">156 discussions</small>
                      </div>
                    </div>
                    <p class="card-text">Share experiences about cleats, shin guards, training methods, and field conditions.</p>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card h-100">
                  <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                      <i class="fa-solid fa-dumbbell fs-2 text-danger me-3"></i>
                      <div>
                        <h5 class="card-title mb-0">Training & Fitness</h5>
                        <small class="text-muted">203 discussions</small>
                      </div>
                    </div>
                    <p class="card-text">Discuss workout gear, training programs, nutrition tips, and fitness equipment.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- ALL THREADS TAB -->
          <div class="tab-pane fade show active" id="threads" role="tabpanel">
            <!-- THREAD SECTION-->
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h4 class="mb-0">All Discussions <span class="text-muted">(<%= threads ? threads.length : 0 %>)</span></h4>
              <div>
                <button class="btn btn-outline-secondary btn-sm me-2" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                  <i class="fa-solid fa-filter"></i> Filter
                </button>
                <% if (user) { %>
                  <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#threadForm" aria-expanded="false" aria-controls="threadForm">
                    <i class="fa-solid fa-plus"></i> New Discussion
                  </button>
                <% } else { %>
                  <a href="/login" class="btn btn-primary btn-sm">
                    <i class="fa-solid fa-plus"></i> Login to Post
                  </a>
                <% } %>
              </div>
            </div>

            <!-- Create Thread Form (collapsible) -->
            <% if (user) { %>
            <div class="collapse mb-4" id="threadForm">
              <div class="card card-body">
                <h5 class="mb-3">Start a New Discussion</h5>
                <form action="/forum/threads" method="POST" enctype="multipart/form-data">
                  <div class="mb-3">
                    <label class="form-label">Thread Title</label>
                    <input type="text" class="form-control" name="title" placeholder="Enter discussion title" maxlength="120" required>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea class="form-control" name="body" rows="4" placeholder="Share your thoughts, questions, or advice..." maxlength="2000" required></textarea>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Tags (comma separated)</label>
                    <input type="text" class="form-control" name="tags" placeholder="e.g. running, shoes, marathon" maxlength="200">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Image (optional)</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
                  </div>
                  <button type="submit" class="btn btn-dark">
                    <i class="fa-solid fa-paper-plane me-2"></i>Post Discussion
                  </button>
                </form>
              </div>
            </div>
            <% } %>

            <!-- Filter Controls (Collapsible) -->
            <div class="collapse mb-4" id="filterCollapse">
              <div class="card card-body">
                <div class="mb-3 d-flex flex-wrap gap-2 align-items-center">
                  <input id="threadSearch" class="form-control w-auto" style="min-width:200px" type="text" placeholder="Search discussions...">
                  <select id="threadSort" class="form-select w-auto">
                    <option value="date-desc">Newest</option>
                    <option value="date-asc">Oldest</option>
                    <option value="comments-desc">Most Comments</option>
                    <option value="comments-asc">Least Comments</option>
                  </select>
                  <select id="threadFilter" class="form-select w-auto">
                    <option value="all">All Categories</option>
                    <option value="running">Running</option>
                    <option value="basketball">Basketball</option>
                    <option value="football">Football</option>
                    <option value="training">Training</option>
                  </select>
                </div>
              </div>
            </div>

            <!-- Thread List/Detail Container -->
            <div id="threadList" class="row g-4"></div>
            <div id="threadDetail" class="d-none"></div>
          </div>

          <!-- GUIDELINES TAB -->
          <div class="tab-pane fade" id="guidelines" role="tabpanel">
            <h4 class="mb-3">Community Guidelines</h4>
            <div class="card">
              <div class="card-body">
                <h6 class="fw-bold">Be Respectful</h6>
                <p>Treat all community members with respect. No harassment, hate speech, or personal attacks.</p>
                
                <h6 class="fw-bold mt-3">Stay On Topic</h6>
                <p>Keep discussions relevant to sports equipment, training, and related topics.</p>
                
                <h6 class="fw-bold mt-3">No Spam or Self-Promotion</h6>
                <p>Don't spam the forum with advertisements or excessive self-promotion.</p>
                
                <h6 class="fw-bold mt-3">Use Clear Titles</h6>
                <p>Create descriptive thread titles that accurately represent your question or topic.</p>
                
                <h6 class="fw-bold mt-3">Search Before Posting</h6>
                <p>Check if your question has already been answered before creating a new thread.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- TRENDING DISCUSSIONS -->
    <section class="py-5 bg-light">
      <div class="container">
        <h4 class="mb-4">Trending Discussions</h4>
        <div class="row g-4">
          <% 
          var trendingThreads = threads ? threads.slice(0, 4) : [];
          if (trendingThreads.length > 0) {
            trendingThreads.forEach(function(thread) { 
          %>
            <div class="col-6 col-md-3">
              <div class="card h-100">
                <img src="<%= thread.image || '/img/placeholder.png' %>" class="card-img-top" alt="Thread Image" style="height: 180px; object-fit: cover;">
                <div class="card-body">
                  <h6 class="card-title"><%= thread.title.substring(0, 50) %><%= thread.title.length > 50 ? '...' : '' %></h6>
                  <div class="mb-2">
                    <span class="text-muted small">
                      <i class="fa-solid fa-comment"></i> <%= thread.comments ? thread.comments.length : 0 %>
                    </span>
                  </div>
                  <a href="/forum/threads/<%= thread._id %>" class="btn btn-sm btn-outline-dark w-100">View</a>
                </div>
              </div>
            </div>
          <% 
            });
          } else {
          %>
            <div class="col-12">
              <p class="text-muted text-center">No trending discussions yet.</p>
            </div>
          <% } %>
        </div>
      </div>
    </section>

    <!-- FOOTER -->
    <footer class="bg-light pt-5 mt-5">
      <div class="container">
        <div class="row">
          <!-- Column 1: Logo + Social -->
          <div class="col-md-3 mb-4">
            <div class="d-flex align-items-center gap-2 mb-2">
              <div class="p-2 border rounded"><i class="fa-solid fa-store fs-3"></i></div>
              <span class="fw-bold fs-5">Ecommerce</span>
            </div>
            <p class="text-muted small">DevCut is a YouTube channel for practical project-based learning.</p>
            <div class="d-flex gap-2 mt-2">
              <i class="fab fa-github fs-5"></i>
              <i class="fab fa-instagram fs-5"></i>
              <i class="fab fa-youtube fs-5"></i>
            </div>
          </div>
          <!-- Column 2: Shop -->
          <div class="col-md-2 mb-4">
            <h6 class="text-muted">SHOP</h6>
            <ul class="list-unstyled mt-2">
              <li><a href="/account" class="text-decoration-none text-dark">My Account</a></li>
              <li><a href="/checkout" class="text-decoration-none text-dark">Checkout</a></li>
              <li><a href="/cart" class="text-decoration-none text-dark">Cart</a></li>
            </ul>
          </div>
          <!-- Column 3: Company -->
          <div class="col-md-2 mb-4">
            <h6 class="text-muted">COMPANY</h6>
            <ul class="list-unstyled mt-2">
              <li><a href="/about" class="text-decoration-none text-dark">About us</a></li>
              <li><a href="/contact" class="text-decoration-none text-dark">Contact</a></li>
              <li><a href="/careers" class="text-decoration-none text-dark">Careers</a></li>
            </ul>
          </div>
          <!-- Column 4: Support -->
          <div class="col-md-2 mb-4">
            <h6 class="text-muted">SUPPORT</h6>
            <ul class="list-unstyled mt-2">
              <li><a href="/faq" class="text-decoration-none text-dark">FAQ</a></li>
              <li><a href="/terms" class="text-decoration-none text-dark">Terms of use</a></li>
              <li><a href="/privacy" class="text-decoration-none text-dark">Privacy Policy</a></li>
            </ul>
          </div>
          <!-- Column 5: Payments -->
          <div class="col-md-3 mb-4">
            <h6 class="text-muted">ACCEPTED PAYMENTS</h6>
            <div class="d-flex gap-2 mt-2">
              <i class="fa-brands fa-cc-visa fs-3"></i>
              <i class="fa-brands fa-cc-mastercard fs-3"></i>
              <i class="fa-brands fa-cc-amex fs-3"></i>
              <i class="fa-brands fa-cc-paypal fs-3"></i>
            </div>
          </div>
        </div>
        <hr class="mt-4">
        <div class="text-center pb-3 small text-muted">
          Â© 2025 Ecommerce. All rights reserved.
        </div>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script id="threadsData" type="application/json"><%- JSON.stringify(threads || []) %></script>

    <script>
    // --- Thread Data (from server) ---
    const threads = JSON.parse(document.getElementById('threadsData')?.textContent || '[]');

    // --- Render Functions ---
    function renderTags(tags) {
      if (!tags || tags.length === 0) return '';
      let html = '<div class="mb-2">';
      tags.forEach(tag => {
        html += `<span class="badge bg-secondary me-1">${tag}</span>`;
      });
      html += '</div>';
      return html;
    }

    function renderThreadList(list) {
      const container = document.getElementById('threadList');
      container.innerHTML = '';
      if (!list.length) {
        container.innerHTML = '<div class="col-12 text-center text-muted">No discussions found.</div>';
        return;
      }
      list.forEach(t => {
        const commentCount = t.comments ? t.comments.length : 0;
        container.innerHTML += `
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 thread-preview" data-id="${t._id}" style="cursor:pointer;">
              <img src="${t.image || '/img/placeholder.png'}" class="card-img-top" alt="Thread Image" style="height:180px;object-fit:cover;">
              <div class="card-body">
                ${renderTags(t.tags)}
                <h6 class="fw-bold mb-1">${t.title}</h6>
                <p class="text-muted small mb-1">${t.meta || 'By Community'}</p>
                <p class="mb-2">${(t.excerpt || t.body || '').substring(0, 100)}...</p>
                <div class="d-flex align-items-center justify-content-between">
                  <small class="text-muted">
                    <i class="fa-solid fa-comment"></i> ${commentCount} comments
                  </small>
                  <small class="text-muted">${new Date(t.createdAt || t.created).toLocaleDateString()}</small>
                </div>
              </div>
            </div>
          </div>
        `;
      });
      // Add click event for detail view (redirect to thread page)
      container.querySelectorAll('.thread-preview').forEach(card => {
        card.addEventListener('click', function() {
          const id = this.getAttribute('data-id');
          window.location.href = '/forum/threads/' + id;
        });
      });
    }

    // --- Sort, Filter, Search ---
    function getFilteredSortedThreads() {
      let list = [...threads];
      
      // Search
      const searchVal = document.getElementById('threadSearch')?.value.trim().toLowerCase();
      if (searchVal) {
        list = list.filter(t =>
          t.title.toLowerCase().includes(searchVal) ||
          (t.body || '').toLowerCase().includes(searchVal) ||
          (t.tags || []).some(tag => tag.toLowerCase().includes(searchVal))
        );
      }
      
      // Filter by category
      const filterVal = document.getElementById('threadFilter')?.value;
      if (filterVal && filterVal !== 'all') {
        list = list.filter(t => 
          (t.tags || []).some(tag => tag.toLowerCase().includes(filterVal.toLowerCase()))
        );
      }
      
      // Sort
      const sortVal = document.getElementById('threadSort')?.value || 'date-desc';
      if (sortVal === 'date-desc') {
        list.sort((a,b) => new Date(b.createdAt || b.created) - new Date(a.createdAt || a.created));
      } else if (sortVal === 'date-asc') {
        list.sort((a,b) => new Date(a.createdAt || a.created) - new Date(b.createdAt || b.created));
      } else if (sortVal === 'comments-desc') {
        list.sort((a,b) => (b.comments?.length || 0) - (a.comments?.length || 0));
      } else if (sortVal === 'comments-asc') {
        list.sort((a,b) => (a.comments?.length || 0) - (b.comments?.length || 0));
      }
      
      return list;
    }

    function updateThreadList() {
      renderThreadList(getFilteredSortedThreads());
      document.getElementById('threadDetail').classList.add('d-none');
      document.getElementById('threadList').classList.remove('d-none');
    }

    // --- Event Listeners ---
    document.addEventListener('DOMContentLoaded', function() {
      // Initial render
      updateThreadList();
      
      // Controls
      const threadSearch = document.getElementById('threadSearch');
      const threadSort = document.getElementById('threadSort');
      const threadFilter = document.getElementById('threadFilter');
      
      if (threadSearch) threadSearch.addEventListener('input', updateThreadList);
      if (threadSort) threadSort.addEventListener('change', updateThreadList);
      if (threadFilter) threadFilter.addEventListener('change', updateThreadList);
    });
    </script>
  </div> <!-- End prl-wrapper -->
</body>
</html>
