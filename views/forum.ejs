    <div class="container">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/shop">Ecommerce</a></li>
            <li class="breadcrumb-item active">Forum</li>
        </ol>
    </div>
</nav>

<!-- FORUM CONTENT -->
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0">Community Forum</h4>
        <% if (user) { %>
        <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#newThreadModal">
            <i class="fa-solid fa-plus me-1"></i> New Post
        </button>
        <% } %>
    </div>

    <!-- SEARCH AND SORT BAR -->
    <div class="row mb-4">
        <div class="col-md-8 mb-2 mb-md-0">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0">
                    <i class="fa-solid fa-search text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0" id="threadSearch" 
                       placeholder="Search threads by title, author, content, or tags...">
                <button class="btn btn-outline-secondary" type="button" id="clearSearch" style="display: none;">
                    <i class="fa-solid fa-times"></i>
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <select class="form-select" id="threadSort">
                <option value="newest">Date: Newest First</option>
                <option value="oldest">Date: Oldest First</option>
                <option value="title-asc">Title: A to Z</option>
                <option value="title-desc">Title: Z to A</option>
            </select>
        </div>
        <div class="col-12">
            <div id="searchResults" class="text-muted small mt-2" style="display: none;"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <!-- No Results Message -->
            <div id="noSearchResults" class="alert alert-warning" style="display: none;">
                <i class="fa-solid fa-search me-2"></i>
                No threads found matching your search. Try different keywords.
            </div>

            <% if (threads && threads.length > 0) { %>
                <% threads.forEach(function(thread) { %>
                <div class="card mb-3 thread-card" 
                     data-title="<%= thread.title.toLowerCase() %>"
                     data-author="<%= thread.author.toLowerCase() %>"
                     data-excerpt="<%= thread.excerpt ? thread.excerpt.toLowerCase() : '' %>"
                     data-tags="<%= thread.tags ? thread.tags.join(' ').toLowerCase() : '' %>"
                     data-date="<%= new Date(thread.created).getTime() %>">
                    <div class="card-body">
                        <div class="d-flex gap-3">
                            <!-- Thread Image -->
                            <a href="/forum/threads/<%= thread.id %>" class="flex-shrink-0">
                                <% if (thread.image && thread.image !== 'img/placeholder.png') { %>
                                <img src="/<%= thread.image %>" alt="Thread image" class="thread-image">
                                <% } else { %>
                                <div class="thread-image-placeholder">
                                    <i class="fa-regular fa-image fa-2x"></i>
                                </div>
                                <% } %>
                            </a>

                            <!-- Thread Content -->
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">
                                    <a href="/forum/threads/<%= thread.id %>" class="text-decoration-none text-dark thread-title-link">
                                        <%= thread.title %>
                                    </a>
                                    <% if (thread.archived) { %>
                                    <span class="badge bg-secondary ms-2">Archived</span>
                                    <% } %>
                                </h5>
                                <p class="card-text text-muted small mb-2 thread-author-text">
                                    <i class="fa-regular fa-user me-1"></i> <%= thread.author %> 
                                    <span class="mx-1">•</span>
                                    <i class="fa-regular fa-clock me-1"></i> <%= new Date(thread.created).toLocaleDateString() %>
                                </p>
                                <p class="card-text text-secondary small mb-2 thread-excerpt-text">
                                    <%= thread.excerpt %>
                                </p>
                                <div class="d-flex gap-3 align-items-center flex-wrap">
                                    <span class="text-muted small">
                                        <i class="fa-regular fa-comment me-1"></i> 
                                        <%= thread.comments ? thread.comments.length : 0 %> replies
                                    </span>
                                    <% if (thread.tags && thread.tags.length > 0) { %>
                                        <% thread.tags.slice(0, 3).forEach(function(tag) { %>
                                        <span class="badge bg-light text-dark border thread-tag"><%= tag %></span>
                                        <% }); %>
                                        <% if (thread.tags.length > 3) { %>
                                        <span class="badge bg-light text-muted border">+<%= thread.tags.length - 3 %></span>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            <% } else { %>
                <div class="alert alert-info" id="noThreadsMessage">
                    <i class="fa-solid fa-info-circle me-2"></i>
                    No forum posts yet. Be the first to start a discussion!
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- NEW THREAD MODAL -->
<div class="modal fade" id="newThreadModal" tabindex="-1" aria-labelledby="newThreadModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newThreadModalLabel">Create New Thread</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="newThreadForm">
          <div class="mb-3">
            <label for="threadTitle" class="form-label">Title <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="threadTitle" name="title" required minlength="10" placeholder="Enter a descriptive title (min 10 characters)">
          </div>
          <div class="mb-3">
            <label for="threadBody" class="form-label">Message <span class="text-danger">*</span></label>
            <textarea class="form-control" id="threadBody" name="body" rows="5" required minlength="20" placeholder="Write your message here (min 20 characters)"></textarea>
          </div>
          <div class="mb-3">
            <label for="threadImage" class="form-label">Image URL (optional)</label>
            <input type="text" class="form-control" id="threadImage" name="image" placeholder="e.g. img/1.png or https://example.com/image.jpg">
            <small class="text-muted">Add an image to make your thread stand out</small>
          </div>
          <div class="mb-3">
            <label for="threadTags" class="form-label">Tags (comma separated)</label>
            <input type="text" class="form-control" id="threadTags" name="tags" placeholder="e.g. football, shoes, review">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-dark" id="submitThread">
            <i class="fa-solid fa-paper-plane me-1"></i> Create Thread
        </button>
      </div>
    </div>
  </div>
</div>

